{
  // "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strict": true,
    "lib": ["ES2020", "dom"],
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@models/*": ["app/javascript/models/*"],
      "@modules/*": ["app/javascript/modules/*"],
      "@component/*": ["app/javascript/component/*"],
      "@assets/*": ["app/javascript/assets/*"]
    },
    "importsNotUsedAsValues": "preserve",
    "sourceMap": true,
    "target": "ES2020",
    "noEmit": true
  },
  "exclude": ["spec/javascripts", "test/javascripts", "node_modules", "vendor", "public"],
  "compileOnSave": false

}
